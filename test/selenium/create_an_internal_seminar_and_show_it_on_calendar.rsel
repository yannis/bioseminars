setup :fixtures => :all
current_date_to_string = Date.current.to_s(:db)

delete_cookie 'display_int_seminar', '/'
include_partial 'login'
click "new_seminar_date_#{current_date_to_string}"
wait_for_element_present "seminars_div"
type "seminar_title", "anInternalSeminar"
type "css=.speaker_name", "aSpeaker"
type "css=.speaker_affiliation", "anAffiliation"
type "css=.host_name", "anHost"
