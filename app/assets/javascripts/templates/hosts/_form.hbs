<div class="panel panel-info host-form form-horizontal">
  <div class="panel-heading">
    <button type="button" class="close" aria-hidden="true" {{action "cancel" content}}>&times;</button>
    <h3 class="panel-title">{{controller.pageTitle}}</h3>
  </div>
  <div class="panel-body">
    {{#if validationErrors }}
      <div class="alert alert-danger">{{validationErrors}}</div>
    {{/if}}
    <div class='form-group'>
      <label for="form-host-name" class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        {{view Ember.TextField id='form-host-name' valueBinding="name" placeholder='Name' class='form-control'}}
      </div>
    </div>
    <div class='form-group'>
      <label for="form-host-email" class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
        {{view Ember.TextField id='form-host-email' valueBinding="email" placeholder='Email' class='form-control'}}
      </div>
    </div>
  </div>
  <div class="panel-footer">
    {{#if isNew }}
      <button class="btn btn-success" type="submit" {{action "create" content}}>Create</button>
    {{ else }}
      <button class="btn btn-success" type="submit" {{action "update" content}}>Update</button>
    {{/if}}
    or
    <a href="#" {{action "cancel" content}}>Cancel</a>
  </div>
</div>
