<div class="col-md-4 col-md-offset-4">
  <h1>Sign in</h1>
  <form class="form-horizontal user-form" role="form" {{action "authenticate" on="submit" class="form-control"}}>
    <div class="form-group">
      {{input id='identification' placeholder='Enter your Email' value=identification class="form-control"}}
      {{!-- {{view Ember.TextField valueBinding='email' name='email' placeholder='Email' class="form-control"}} --}}
      <span class="help-inline">
        {{errors.email}}
      </span>
    </div>
    <div class="form-group">
      {{input id='password' placeholder='Enter your Password' type='password' value=password class="form-control"}}
      {{!-- {{view Ember.TextField type="password" name="password" valueBinding='password' placeholder='Password' class="form-control"}} --}}
    </div>
    <div class="form-group">
      <button type=submit class="btn btn-large btn-primary">Sign in</button>
      or
      <a href='#' {{action "cancel"}}>Cancel</a>
    </div>
    <p class="form-group">
      {{#link-to "users.reset_password"}}Did you forget your password?{{/link-to}}
    </p>
  </form>
</div>
