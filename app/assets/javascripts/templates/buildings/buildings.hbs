<div class="row" id='buildings'>
  <div class="col-md-8 col-xs-12">
    <h2>{{controller.pageTitle}}</h2>
    <ul class="buildings-buildings list-group">
      {{#each controller}}
        <li class="buildings-building list-group-item">
          {{#link-to 'building' this}}{{name}}{{/link-to}}
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="col-md-4 col-xs-12">
    {{outlet}}
  </div>
</div>
