<div class="row" id='categories'>
  <div class="col-md-8 col-xs-12">
    <h2>{{controller.pageTitle}}</h2>
    <a class="btn btn-default btn-xs" href="#" {{action "toggleShowMe" }}>Toggle all categories visibility</a>
    <ul class="categories-categories list-group">
      {{#each controller}}
        {{view App.CategorySortableView}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-4 col-xs-12">
    {{outlet}}
  </div>
</div>
