<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" aria-hidden="true" {{action "cancelModal" content}}>&times;</button>
      <h3 class="panel-title">{{controller.pageTitle}}</h3>
    </div>
    <form class="form form-horizontal">
      <div class="modal-body">
        {{em-validation-errors validationErrors=validationErrors}}
        <div class='form-group'>
          <label for="form-location-name" class="col-sm-2 control-label">Name</label>
          <div class="col-sm-10">
            {{view Ember.TextField id='form-location-name' valueBinding="name" placeholder='Name' class="form-control"}}
          </div>
        </div>
        <div class='form-group'>
          <label for="form-location-building" class="col-sm-2 control-label">Building</label>
          {{selectBuildings}}
          <div class="col-sm-10">
            {{view Ember.Select
                viewName="select"
                contentBinding="controllers.buildings.content"
                optionLabelPath="content.name"
                optionValuePath="content.id"
                selectionBinding="building"
                prompt="Pick a building:"
                id="form-location-building"
                class="form-control"
            }}
          </div>
        </div>
      </div>
      <div class="modal-footer">
        {{#if isNew }}
          <button class="btn btn-success" type="submit" {{action "create" content}}>Create</button>
        {{ else }}
          <button class="btn btn-success" type="submit" {{action "update" content}}>Update</button>
        {{/if}}
        or
        <a href="#" {{action "cancelModal" content}}>Cancel</a>
      </div>
    </div>
  </div>
</div>
