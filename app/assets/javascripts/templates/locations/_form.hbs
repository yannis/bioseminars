<div class="panel panel-info location-form form-horizontal">
  <div class="panel-heading">
    <button type="button" class="close" aria-hidden="true" {{action "cancel" content}}>&times;</button>
    <h3 class="panel-title">{{pageTitle}}</h3>
  </div>
  <div class="panel-body">
    {{#if validationErrors }}
      <div class="alert alert-danger">{{validationErrors}}</div>
    {{/if}}
    <div class='form-group'>
      <label for="form-location-name" class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        {{view Ember.TextField id='form-location-name' valueBinding="name" placeholder='Name'}}
      </div>
    </div>
    <div class='form-group'>
      <label for="form-location-building" class="col-sm-2 control-label">Building</label>
      <div class="col-sm-10">
        {{view Ember.Select
            viewName="select"
            contentBinding="selectBuildings"
            optionLabelPath="content.name"
            optionValuePath="content.id"
            selectionBinding="building"
            prompt="Pick a building:"
            id="form-location-building"
        }}
      </div>
    </div>
  </div>
  <div class="panel-footer">
    {{#if isNew }}
      <button class="btn btn-success" type="submit" {{action "create" content}}>Create</button>
    {{ else }}
      <button class="btn btn-success" type="submit" {{action "update" content}}>Update</button>
    {{/if}}
    or
    <a href="#" {{action "cancel" content}}>Cancel</a>
  </div>
</div>
