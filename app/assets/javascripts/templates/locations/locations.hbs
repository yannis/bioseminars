<div class="row" id='locations'>
  <div class="col-md-8 col-xs-12">
    <h2>{{controller.pageTitle}}</h2>
    <ul class="locations-locations list-group">
      {{#each controller}}
        <li class="locations-location list-group-item">
          {{#link-to 'location' this}}{{ name}}{{/link-to}}
          {{#if building}}
            ({{#link-to 'building' building}}{{building.name}}{{/link-to}})
          {{/if}}
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="col-md-4 col-xs-12">
    {{outlet}}
  </div>
</div>
