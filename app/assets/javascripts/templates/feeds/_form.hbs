<form class="form-horizontal feed-form" role="form">
  <div class='form-group'>
    <label class="col-sm-2 control-label" for="feed-form-scopes">
      Time scope
    </label>
    <div class="col-sm-10">
      {{view Em.Select
        viewName="select"
        id="feed-form-scopes"
        class="form-control"
        contentBinding="scopes"
        optionLabelPath="content"
        optionValuePath="content"
        selectionBinding="selectedScope"
      }}
    </div>
  </div>
  <div class='form-group'>
    <label class="col-sm-2 control-label" for="feed-form-types">
      Format
    </label>
    <div class="col-sm-10">
      {{view Em.Select
        viewName="select"
        class="form-control"
        id="feed-form-types"
        contentBinding="types"
        optionLabelPath="content"
        optionValuePath="content"
        selectionBinding="selectedType"
      }}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          {{view Em.Checkbox checkedBinding="internal" valueBinding="internal" placeholder='Include internal (private) seminars?'}} Include internal (private) seminars?
        </label>
      </div>
    </div>
  </div>


  {{#if askForAlarm}}
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <label>
            {{view Em.Checkbox checkedBinding="alarm" valueBinding="alarm"}} Set an alarm?
          </label>
          {{#if alarm}}
            <label>
              {{view Ember.TextField valueBinding="alarmMinutes" placeholder='60' disabled=alarmDisabled}}
              minutes before seminars
            </label>
          {{/if}}
        </div>
      </div>
    </div>
  {{/if}}

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          {{view Em.Checkbox checkedBinding="asc" placeholder='Sort seminars by ascending time?'}} Sort seminars by ascending time?
        </label>
      </div>
    </div>
  </div>

  <div class='form-group'>
    <label class="col-sm-2 control-label" for="feed-form-after">
      After date
    </label>
    <div class="col-sm-10 input-group date-field">
      {{view App.DateField valueBinding="after" placeholder='After date' id='form-feed-after' class='form-control' }}
      <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span>
    </div>
  </div>

  <div class='form-group'>
    <label class="col-sm-2 control-label" for="feed-form-before">
      Before date
    </label>
    <div class="col-sm-10 input-group date-field">
      {{view App.DateField valueBinding="before" placeholder='Before date' id='form-feed-before' class='form-control' }}
      <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span>
    </div>
  </div>
</form>
