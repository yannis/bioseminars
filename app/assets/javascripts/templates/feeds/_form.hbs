<div class="feed-form">
  <div class='form-group'>
    <label class="control-label">
      Time scope
      {{view Em.Select
        viewName="select"
        contentBinding="scopes"
        optionLabelPath="content"
        optionValuePath="content"
        selectionBinding="selectedScope"
      }}
    </label>
  </div>
  <div class='form-group'>
    <label class="control-label">
      Format
      {{view Em.Select
        viewName="select"
        contentBinding="types"
        optionLabelPath="content"
        optionValuePath="content"
        selectionBinding="selectedType"
      }}
    </label>
  </div>

  <div class='form-group'>
    <label class="control-label">
      Include internal (private) seminars?
      {{view Em.Checkbox checkedBinding="internal" valueBinding="internal" placeholder='Include internal (private) seminars?'}}
    </label>
  </div>


  {{#if askForAlarm}}
    <div class='form-group'>
      <label class="control-label">
        {{view Em.Checkbox checkedBinding="alarm" valueBinding="alarm" placeholder='Set an alarm?'}}
        Set an alarm
      </label>
      {{!-- {{#if alarm}} --}}
      <label class="control-label">
        {{view Ember.TextField valueBinding="alarmMinutes" placeholder='60' disabled=alarmDisabled}}
        minutes before seminars
      </label>
    </div>
    {{!-- {{/if}} --}}
  {{/if}}

  <div class='form-group'>
    <label class="control-label">
      Sort seminars by ascending time?
      {{view Em.Checkbox checkedBinding="asc" placeholder='Sort seminars by ascending time?'}}
    </label>
  </div>

  <div class='form-group'>
    <label for="form-feed-before" class="col-sm-2 control-label">Before date</label>
    <div class="col-sm-10 input-group date-field">
      {{view App.DateField valueBinding="before" placeholder='Before date' id='form-feed-before' class='form-control' }}
      <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span>
    </div>
  </div>

  <div class='form-group'>
    <label for="form-feed-after" class="col-sm-2 control-label">After date</label>
    <div class="col-sm-10 input-group date-field">
      {{view App.DateField valueBinding="after" placeholder='After date' id='form-feed-after' class='form-control' }}
      <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span>
    </div>
  </div>
</div>
