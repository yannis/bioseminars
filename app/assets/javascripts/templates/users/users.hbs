<div class="row" id='users'>
  <div class="col-md-8 col-xs-12">
    <h2>{{controller.pageTitle}}</h2>
    <ul class="users-users list-group">
      {{#each controller}}
        <li class="users-user list-group-item">
          {{#link-to 'users.user' this}}{{name}}{{/link-to}}
          {{#if admin }}
            (admin)
          {{/if}}
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="col-md-4 col-xs-12">
    {{outlet}}
  </div>
</div>
