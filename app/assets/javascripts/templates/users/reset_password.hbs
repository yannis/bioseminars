<div class="col-md-4 col-md-offset-4">
  <h1>{{pageTitle}}</h1>
  <form class="form-horizontal user-form" role="form" {{action "reset_password" on="submit"}}>
    <div class="form-group">
      {{view Ember.TextField name='email' valueBinding='email' placeholder='Email' class="form-control"}}
      <span class="help-inline">
        {{errors.email}}
      </span>
    </div>
    <button type=submit class="btn btn-large btn-primary">Send me reset password instructions</button>
    or
    <a href='#' {{action "cancel"}}>Cancel</a>
  </form>
</div>
