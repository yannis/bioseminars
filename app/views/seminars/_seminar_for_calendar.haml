%li[seminar]{:class => "#{seminar.internal? ? 'internal' : 'public'} #{seminar.all_day? ? 'all_day' : ''} #{seminar.internal? and cookies[:display_int_seminar] == 'true' ? '' : 'hidden_seminar'} ", :style => "#{seminar.all_day? ? 'color: white; background-color: #'+seminar.color : 'color: #'+seminar.color}"}
  = link_to(seminar.time_and_category, seminar_path(seminar), {:id => "seminar_#{seminar.id}_link", :onclick => 'return false'})
  = javascript_tag("new Tip('seminar_#{seminar.id}', 'loading...', {style: 'bioseminars', title: '#{seminar.title}', showOn: 'click', hideOn: { element: '.close', event: 'click'}, closeButton: true, hook: { tip: 'leftMiddle', target: 'rightMiddle'}, stem: 'leftMiddle', hideOthers: true, ajax: {   url: '#{seminar_path(seminar)}',   options: {     method: 'get'   } } })")