- stylesheet 'prototip.css'
- stylesheet 'calendar.css'
- javascript '/javascripts/prototip2-2.1.0.1/js/prototip.js'
- if logged_in? and basic_or_admin?
  - onload "set_new_seminar_function('#{form_authenticity_token}')"
- @title ||= "Listing seminars"
= calendar(:accessible => true, :year => @date.year, :month => @date.month, :first_day_of_week => 1, :abbrev => (0..10), :previous_month_text => link_to(@date.last_month.to_s(:month)+' &lt;', seminars_path(:date => @date.last_month.to_s(:db))), :next_month_text => link_to('&gt; '+@date.next_month.to_s(:month), seminars_path(:date => @date.next_month.to_s(:db)))) do |d|
  - render_calendar_cell(d)
- form_tag seminars_path, :id => 'show_internal_seminars' do
  = check_box_tag :internal, true, cookies[:display_int_seminar] == "true"
  = label_tag :internal, "Show internal seminars (<span class='redstar'>*</span>). Internal seminars are not public."
  = observe_field 'internal', :function => 'show_internal_seminars(value)'