%tr[location]{:class => cycle('', 'odd')}
  %td
    = link_to_unless_current h(location.name), location_path(location)
  %td
    = h(location.description)
  %td
    = link_to(h(location.building.name), building_path(location.building)) unless location.building.blank?
  %td
    = location.seminars.size
  - if logged_in?
    %td
      - links = [link_to_remote('Edit', :url => edit_location_path(location), :method => :get, :html => {:href => edit_location_path(location)})]
      - links << destroy_remote_link(location) if location.no_more_seminars? and index?
      - links << destroy_link(location) if location.no_more_seminars? and !index?
      = links.join(' Â· ')