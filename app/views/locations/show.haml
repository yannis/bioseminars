- @title ||= "Showing location “#{@location.name}”"
#locations{:class => "#{'left_column' if logged_in?}"}
  %h2.title
    = @title
  %table.list
    %thead
      = render 'table_head'
    %tbody#tbody_in_location_table
      = render @location
  - unless @seminars.blank?
    %h3 Seminars
    = will_paginate @seminars, :inner_window => 1, :outer_window => 1
    #seminars
      = render @seminars
- if logged_in?
  .right_column
    .box#new_or_edit_form
      = render :partial => 'layouts/new_box', :locals => {:object => @new_location}