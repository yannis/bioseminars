- @title ||= "Edit location “#{@location.name}”"
.grid_4.prefix_4.suffix_4
  = error_messages_for :location
  - form_for :location, :url => location_path(@location), :html => { :method => :put, :class => 'with_blocks'} do |f|
    %fieldset
      %legend
        = @title
      = render :partial => 'form', :locals => {:f => f}
      = update_button