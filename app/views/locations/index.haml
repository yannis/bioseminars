- @title ||= "Listing locations"
#locations{:class => "#{'left_column' if user_signed_in?}"}
  %h2.title
    = @title
  %table.list
    %thead
      = render 'table_head'
    %tbody#tbody_in_location_table
      = render @locations
- if user_signed_in?
  %aside
    = render 'layouts/new_box', :object => @new_location