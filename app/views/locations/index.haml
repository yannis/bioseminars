- @title ||= "Listing locations"
#locations{:class => "#{'left_column' if can?(:create_or_update, Location)}"}
  %h2.title
    = @title
  %table.list
    %thead
      = render 'table_head'
    %tbody#tbody_in_location_table
      = render @locations
- if can?(:create_or_update, Location)
  %aside
    = render 'layouts/new_box', :object => @new_location