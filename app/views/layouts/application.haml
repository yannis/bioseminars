!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title
      = @title || "wAllet"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    %meta{:name=>"author", :content=>"Yannis Jaquet"}/
    %meta{:name => "robots", :content => "noindex,nofollow"}
    = javascript_include_tag  :defaults
    = stylesheet_link_tag 'reset.css', :media => "screen, projection"
    = stylesheet_link_tag '960.css', :media => "screen, projection"
    = stylesheet_link_tag 'text.css', :media => "screen, projection"
    = stylesheet_link_tag 'navigation.css', :media => "screen, projection"
    /[if IE]
    /  = stylesheet_link_tag 'emastic/ie-min.css', :media => 'screen, projection'
    / = stylesheet_link_tag 'screen', :media => "screen, projection"
    / = stylesheet_link_tag 'print', :media => "print"
    / = stylesheet_link_tag 'my_styles2', :media => "screen, projection"
    = stylesheet_link_tag 'application', :media => "screen, projection"
    = yield :head
  %body{:onload => "#{yield(:onload)}"}
    .container_12
      #banner.one.grid_3
        %h1
          = link_to 'Seminars', root_path
      #navigation.grid_9
        = render 'layouts/navigation'
      .clear
      #content.grid_12
        - unless flash[:notice].blank?
          #flash_notice
            .flash.success
              = " "+flash[:notice]
        - unless flash[:warning].blank?
          #flash_warning
            .flash.error
              = " "+flash[:warning]
        = yield :layout
      - unless params[:controller] == 'sessions'
        #footer.grid_12
          .box
            %p
              © University of Geneva 2009
              –
              = link_to 'log', '/log.txt'
              = '('+File.mtime(RAILS_ROOT+'/public/log.txt').to_s(:short)+')'