!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title
      = @title || "bioSeminars"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    %meta{:name=>"author", :content=>"Yannis Jaquet, Gregory Theiler"}/
    %meta{:name => "robots", :content => "all"}
    %meta{:name => 'description', :content => "Calendar of all Life Sciences seminars organized at the University of Geneva (Switzerland), Faculty of Sciences"}
    %link{:rel => "shortcut icon", :href => "http://bioseminars.unige.ch/favicon.ico"}/
    = javascript_include_tag "http://use.typekit.com/und6gvf.js"
    = javascript_tag "try{Typekit.load();}catch(e){}"
    = javascript_include_tag  :defaults
    = javascript_include_tag '/growler1.0.0/src/growler.js'
    = stylesheet_link_tag 'reset.css', 'application.css', '/growler1.0.0/css/examples.css', :cache => 'base', :media => "screen, projection"
    /[if IE 7]
      = stylesheet_link_tag 'ie.css', :media => "screen, projection"
    = auto_discovery_link_tag :rss, seminars_path(:format => 'rss', :scope => 'future'), :title => "RSS feed for all seminars"
    - for category in Category.find(:all)
      = auto_discovery_link_tag :rss, seminars_path(:format => 'rss', :categories => category.id, :scope => 'future'), :title => "“#{category.name}” seminars"
    = yield :head
  %body{:onload => "#{yield(:onload)}"}
    #main_container
      #banner_and_navigation.group
        #banner
          %h1
            = link_to "<span class='banner_font'>bio</span><span class='tk_swingdancer'>Seminars</span>", root_path
        = render 'layouts/navigation'
      #flash_and_co.group
        = render 'layouts/javascript_disabled_notification'
        - unless flash[:notice].blank?
          #flash_notice
            .flash.notice
              = " "+flash[:notice]
        - unless flash[:warning].blank?
          #flash_warning
            .flash.warning
              = " "+flash[:warning]
      #content.group
        = yield :layout
      #footer.group
        #logo
          = link_to(image_tag('fac_sciences_pant.png', :id => 'logo_fac'), 'http://www.unige.ch/sciences')
        #footer_box.group
          %ul
            %li
              = link_to 'About bioSeminars', about_path
            %li
              = link_to 'RSS', seminars_path(:format => 'rss', :scope => 'future'), :id => 'rss_feed_link'
            %li
              = link_to 'iCal/ICS', "webcal://#{HOST}#{seminars_path(:format => 'ics', :scope => 'future')}", :id => 'ical_feed_link'
            %li
              Create
              = link_to 'custom feeds', feeds_path
          %ul
            %li
              = render 'users/user_bar'
            %li
              = link_to 'log', '/log.txt'
              = '('+File.mtime(RAILS_ROOT+'/public/log.txt').to_s(:short)+')'
            %li
              contact the
              = mail_to "yannis.jaquet@unige.ch, gregory.theiler@unige.ch", 'webmasters', :encode => :hex
            %li
              &copy;
              = link_to 'University of Geneva', 'http://www.unige.ch'
              2009