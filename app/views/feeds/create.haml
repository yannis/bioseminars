- @title ||= 'Your feeds'
%h2
  = @title
%h3 RSS feed
%p
  = link_to @rss_feed, @rss_feed, :id => 'rss_feed'
%h3 iCal/ICS feed
%p
  %a{:href => "webcal://#{SHORT_HOST}#{seminars_path(:format => 'ics', :categories => @categories.map{|c| c.id}.join(' '))}"}
    = "webcal://#{SHORT_HOST}#{seminars_path(:format => 'ics', :categories => @categories.map{|c| c.id}.join(' '))}"
%h3 XML feed
%p
  = link_to @xml_feed, @xml_feed
%h3 Calendar for iFrame
%p
  = link_to @iframe, @iframe
%h3 Embed code
.grid_12
  .grid_8
    %object{:type => "text/html", :data => @iframe, :style => "width:500px;height:600px;"}
      %p Calendar not loading...
  .grid_4
    %textarea{:style => ''}
      = "<object type='text/html' style='width: 500px; height: 600px;' data='http://localhost:3000/seminars.iframe?categories=2+3+4'><p>Calendar not loading...</p></object>"
.clear