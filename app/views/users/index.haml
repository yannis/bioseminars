- @title ||= "Users"
.left_column
  %h2.title
    = @title
  %table.list
    %thead
      = render 'table_head'
    %tbody#tbody_in_user_table
      = render @users
.right_column
  .box#new_or_edit_form
    - if @new_user.new_record?
      = render :partial => 'layouts/new_box', :locals => {:object => @new_user}
    - else
      = render :partial => 'layouts/edit_box', :locals => {:object => @new_user}