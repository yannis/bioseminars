.label_and_input
  = f.label :name
  = f.text_field :name
  = f.my_error_message_on :name
  
.label_and_input
  = f.label :email
  = f.text_field :email
  = f.my_error_message_on :email

.label_and_input
  = f.label :password
  = f.password_field :password
  = f.my_error_message_on :password

.label_and_input
  = f.label :password_confirmation, 'Confirm Password'
  = f.password_field :password_confirmation
  = f.my_error_message_on :password_confirmation


- if admin?
  .label_and_input  
    = f.check_box :admin
    = f.label :admin, :class => 'for_check_box'
    = f.my_error_message_on :admin
%p
  %span.button.inline_in_form
    = submit_or_cancel_form(f)