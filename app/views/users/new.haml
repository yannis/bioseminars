- @title ||= 'Sign up a new user'
- @user.password = @user.password_confirmation = nil
.six.column
  %h2
    = @title
  = error_messages_for :user
  - form_for :user, :url => users_path, :html => {:class => 'with_blocks'} do |f|
    = render :partial => 'form', :locals => {:f => f}
    = submit_tag 'Sign up'
