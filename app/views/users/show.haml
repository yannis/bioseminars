- @title ||= "Showing user “#{@user.name}”"
%div{:class => "#{'left_column' if admin?}"}
  %h2.title
    = @title
  %table.list
    %thead
      = render 'table_head'
    %tbody
      = render @user
- if admin?
  %aside
    - if @new_user.new_record?
      = render 'layouts/new_box', :object => @new_user
    - else
      = render 'layouts/edit_box', :object => @new_user
