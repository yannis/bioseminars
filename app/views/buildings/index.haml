- @title ||= "Listing buildings"
#buildings{:class => "#{'left_column' if can?(:create_or_update, Building)}"}
  %h2.title
    = @title
  %table.list
    %thead
      = render 'table_head'
    %tbody#tbody_in_building_table
      = render @buildings
- if can?(:create_or_update, Building)
  %aside
    = render 'layouts/new_box', :object => @new_building