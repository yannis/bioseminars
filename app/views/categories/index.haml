- if admin?
  - stylesheet '/colorpicker/css/colorpicker.css'
  - javascript '/colorpicker/js/colorpicker.js', '/javascripts/jq/jquery.tablednd_0_5.js'
  - document_ready "$('table.list').tableDnD({ onDragClass: 'dragged', onDrop: function(table, row) { reorder('table.list', '#{reorder_categories_path}'); }});"
- @title ||= "Categories"
%div{:class => "#{'left_column' if user_signed_in?}"}
  %h2.title
    = @title
  %table.list
    %thead
      = render 'table_head'
    %tbody#tbody_in_category_table
      = render @categories
- if user_signed_in?
  %aside
    - if @category.new_record?
      = render 'layouts/new_box', :object => @category
    - else
      = render 'layouts/edit_box', :object => @category