%tr[category]
  %td
    - unless category.color.blank?
      %span.color{:style => "background-color: ##{category.color}"}
    = link_to_unless_current h(category.name), category_path(category)
  %td
    =h category.acronym
  %td
    = h(category.description)
  %td
    = category.seminars.size
  - if admin?
    %td
      - links = [link_to('Edit', [:edit, category], :method => :get, :remote => true)] if can?(:update, category)
      - links << destroy_link(category) if category.no_more_seminars? && can?(:destroy, category)
      =raw links.join(' Â· ')